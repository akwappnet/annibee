<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/abeezee_regular</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/abeezee_regular</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:background">@drawable/button_red_bg_rounded</item>
    </style>

    <style name="ButtonWhiteStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:background">@drawable/button_bg_rounded</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/black_gray</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BadgeTextViewStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="RadioButtonStyle" parent="TextViewStyle">
        <item name="android:buttonTint">@color/sky_blue</item>
    </style>

    <style name="TextViewStyleItalic">
        <item name="android:textColor">@color/black_gray</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/abeezee_italic</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@color/transparent</item>
        <!-- <item name="boxStrokeColor">@color/colorPrimary</item>
         <item name="boxStrokeWidth">@dimen/_1sdp</item>
         <item name="boxCornerRadiusBottomEnd">@dimen/_5sdp</item>
         <item name="boxCornerRadiusBottomStart">@dimen/_5sdp</item>
         <item name="boxCornerRadiusTopEnd">@dimen/_5sdp</item>
         <item name="boxCornerRadiusTopStart">@dimen/_5sdp</item>-->
        <item name="hintEnabled">true</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black_gray</item>
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextInputEditTextStyleOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_5sdp</item>
        <item name="hintEnabled">true</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/black_gray</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:importantForAutofill" tools:ignore="NewApi">noExcludeDescendants</item>
    </style>

    <style name="EditTextClickableStyle">
        <item name="android:textColor">@color/black_gray</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:editable">false</item>
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:buttonTint">@color/sky_blue</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>


